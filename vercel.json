{
    "version": 2,
    "name": "my-vite-app",
    "builds": [
      {
        "src": "vite.config.js",
        "use": "@vercel/node"
      },
      {
        "src": "Mailer.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/sendmail/.*",
        "dest": "Mailer.js"
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ]
  }
  